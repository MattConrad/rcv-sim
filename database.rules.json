{
  "rules": {
    ".read": true,
    "elections": {
      "$electionId": {
        ".write": "(data.exists() && data.child('owner').val() == auth.uid) || (!data.exists() && newData.child('owner').val() == auth.uid)"
      }
    },
    "candidates": {
      "$electionId": {
        "$candidateId": {
          ".write": "(data.exists() && data.child('owner').val() == auth.uid) || (!data.exists() && newData.child('owner').val() == auth.uid)"
        }
      }
    }
  }
}
