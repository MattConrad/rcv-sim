{
  "rules": {
    ".read": true,
    "elections": {
      "$electionId": {
        ".write": "!data.exists() && newData.child('owner').val() == auth.uid"
      }
    },
    "candidates": {
      "$electionId": {
        "$candidateId": {
          ".write": "!data.exists() && newData.child('owner').val() == auth.uid"
        }
      }
    },
    "votes": {
      "$electionId": {
        "$voteId": {
          ".write": "!data.exists()"
        }
      }
    }
  }
}
